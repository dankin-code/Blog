@using Blog.Models
@model IEnumerable<Blog.Models.Post>

@{ViewBag.Title = "Blog";}

<h2>@ViewBag.Title.</h2>

<div class="container-fluid">

    @foreach (var item in Model)
    {

        <p align="center"><img class="img-responsive" src="@Url.Content(item.MediaUrl)" /></p>
        <h3>@Html.DisplayFor(model => item.PostTitle)</h3>
        <hr />
        @Html.DisplayFor(model => item.PostContent)
        <br />
        <br />
        <pre>Date Posted: @Html.DisplayFor(model => item.PostCreationDate)</pre>
        <br />
        <br />

        <h4>Comments</h4>
        <br />

        foreach (var c in item.Comments)
        {
            @Html.DisplayFor(modelItem => c.CommentContent)
        }
    }
</div>
