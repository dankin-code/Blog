@model IEnumerable<Blog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <p align ="center">
    @Html.DisplayFor(modelItem => item.MediaUrl)
    </p>
    <br />
    <h2>@Html.DisplayFor(modelItem => item.PostTitle)</h2>
    <hr />
    @Html.DisplayFor(modelItem => item.PostContent)
    <br />
    <pre>@Html.DisplayFor(modelItem => item.PostCreationDate)</pre>
    <br />
    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    @Html.ActionLink("Details", "Details", new { id = item.Id })
    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    <br />
    <br />
    <hr />
}
