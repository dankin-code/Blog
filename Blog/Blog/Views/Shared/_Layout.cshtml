<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Daniel's Blog</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/content/css/agency.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href='~/content/font-awesome/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    tinymce.init({ selector: 'textarea' });

    <meta name="description" content="Daniel's Blog on Web Application Development" />
</head>
<body>
    <div class="container-fluid">
        <div class="navbar-inverse navbar-fixed-top">
            <div class="navbar-default">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daniel's Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Blog", "Blog", "Home")</li>
                    <li>@Html.ActionLink("New Post", "Create", "Posts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="row">
            @*Search box*@
            <p align="right">
                @Html.BeginForm("Index", "Posts", new { }, FormMethod.Get)
                {
                <input name="searchStr" id="searchStr" type="text" />
                <input type="submit" value="Search" class="btn btn-default" />
                }
            </p>
        </div>

        @RenderBody()












        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Daniel's Blog</p>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/Content/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="~/Content/js/classie.js"></script>
    <script src="~/Content/js/cbpAnimatedHeader.js"></script>

    <!-- Contact Form JavaScript -->
    @*<script src="~/Content/js/jqBootstrapValidation.js"></script>
        <script src="js/contact_me.js"></script>*@

    <!-- Custom Theme JavaScript -->
    <script src="~/Content/js/agency.js"></script>

    <!--Tiny MCE Widget-->
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    @RenderSection("scripts", required: false)
</body>
</html>
